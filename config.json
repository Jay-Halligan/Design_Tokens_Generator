
{
    "source": ["data/**/*.json"],
    "platforms": {
      "css": {
        "transformGroup": "css",
        "buildPath": "output/css/",
        "files": [
          {
            "destination": "output/css/variables.css",
            "format": "css/variables"
          }
        ]
      },
      "scss": {
        "transformGroup": "scss",
        "buildPath": "output/scss/",
        "files": [
          {
            "destination": "_variables.scss",
            "format": "scss/variables"
          }
        ]
      }
      
    }
  }